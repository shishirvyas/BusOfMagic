# PostgreSQL Connection Details - EXAMPLE
# Copy this file to .env.local and fill in your actual credentials
# NEVER commit .env.local to git!

# Database Host and Port
DB_HOST=your-database-host.postgres.database.azure.com
DB_PORT=5432

# Database Credentials
DB_USER=your_database_user
DB_PASSWORD=your_secure_password
DB_NAME=postgres

# SSL Configuration (if using Azure)
DB_SSL_ENABLED=true
DB_SSL_CA_PATH=./certs/ca-cert.crt

# Spring Boot JDBC Connection String
SPRING_DATASOURCE_URL=jdbc:postgresql://your-database-host.postgres.database.azure.com:5432/postgres?sslmode=require
SPRING_DATASOURCE_USERNAME=your_database_user
SPRING_DATASOURCE_PASSWORD=your_secure_password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# Node.js Configuration (if needed)
NODE_DB_HOST=your-database-host.postgres.database.azure.com
NODE_DB_PORT=5432
NODE_DB_USER=your_database_user
NODE_DB_PASSWORD=your_secure_password
NODE_DB_DATABASE=postgres
NODE_DB_SSL=true
